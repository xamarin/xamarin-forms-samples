<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="PickerDemo.PickerItemsPage" Title="Picker Items" Icon="xaml.png">
	<StackLayout Margin="20">
		<Label Text="Picker - Data in Items Collection" FontAttributes="Bold" HorizontalOptions="Center" />
		<Picker Title="Select a monkey" SelectedIndexChanged="OnPickerSelectedIndexChanged">
			<Picker.Items>
				<x:String>Baboon</x:String>
				<x:String>Capuchin Monkey</x:String>
				<x:String>Blue Monkey</x:String>
				<x:String>Squirrel Monkey</x:String>
				<x:String>Golden Lion Tamarin</x:String>
				<x:String>Howler Monkey</x:String>
				<x:String>Japanese Macaque</x:String>
			</Picker.Items>
		</Picker>
		<StackLayout Orientation="Horizontal">
			<Label Text="You chose:" />
			<Label x:Name="monkeyNameLabel" />
		</StackLayout>
	</StackLayout>
</ContentPage>